
.rate .rate__item_active,
.rate__item_active + .rate__item,
.rate__item_active + .rate__item + .rate__item,
.rate__item_active + .rate__item + .rate__item + .rate__item,
.rate__item_active + .rate__item + .rate__item + .rate__item  + .rate__item,
.rate.rate_edit .rate__item:hover,
.rate_edit .rate__item:hover + .rate__item,
.rate_edit .rate__item:hover + .rate__item + .rate__item,
.rate_edit .rate__item:hover + .rate__item + .rate__item + .rate__item,
.rate_edit .rate__item:hover + .rate__item + .rate__item + .rate__item  + .rate__item
{
  background url('data:image/png;base64,') no-repeat center center;
}

.rate__item,
.rate_edit:hover .rate__item,
.rate_edit:hover .rate__item_active
{
  background url('data:image/png;base64,') no-repeat center center;
}


.rate {
  display inline-block;

 &__item {
   width 17px;
   height 16px;
   text-decoration none;
   display inline-block;
   float: right;
   cursor default;
  }

   &_edit {
     .rate__item {
        cursor pointer;
      }
   }
}