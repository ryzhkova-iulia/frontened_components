.panel {
  width 100%;

  &__item {
    display: block;
    float: left;
    width: 33%;
    background-color #0fb44b;
    padding 22px 0 26px 0;
    position relative;

    text-decoration none;
    font-weight bold;
    font-size 20px;
    color #ffffff;

    &:hover {
      background-color #0ea445;
    }

    &:hover&:after {
      display none;
    }

    &:hover + &:after {
      display none;
    }
  }

  &__item:first-child&__item:after {
    display none;
  }

  &__item:last-child {
    width 34%;
  }

  &__item:after {
    content "";
    height: 40px;
    width: 1px;
    background: #57ca81;
    display: block;
    position: absolute;
    top: 15px;
    left: 0;
  }

  &__icon {
    width: 27px;
    height: 27px;
    display: inline-block;
    margin: 0 10px -6px 0;

    &_icon_refresh {
      background url('data:image/png;base64,') no-repeat left top;

    }

    &_icon_settings {
      background url('data:image/png;base64,') no-repeat left top;

    }

    &_icon_user {
      background url('data:image/png;base64,') no-repeat left top;

    }
  }
}